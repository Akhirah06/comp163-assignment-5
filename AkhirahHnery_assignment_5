current_num = int(input("Enter the starting number: "))

n = current_num
sequence = [13, 40, 20, 10, 5, 16, 8, 4, 2, 1]
steps = 0

print("Sequence:", end="")

print(n, end="")

while n != 1:
    if n % 2 == 0:
        n = n // 2
    else:
        n = 3 * n + 1
    print(n, end=" ")
    steps = steps + 1

print()
print("Steps:", steps)